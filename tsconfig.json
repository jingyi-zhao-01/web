{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "scripthost",
      "es6",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "skipLibCheck": false,
    "types": ["vite/client"]
  },
  "include": [
    "src"
  ]
}
